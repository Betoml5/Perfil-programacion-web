@model Perfil.Models.ViewModels.IndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<html>
    <head>
        <link rel="stylesheet" href="~/index.css" />
    </head>
    <body>
        <main>
           <section class="personal-info">
                <h2>Información personal</h2>

                <div class="image-wrapper">
                    <img src="~/img/profile.jpeg" alt="Foto de perfil" /> 
                </div>

                <div class="wrapper">
                <p>Nombre: </p>
                <p>@Model.Name</p>
                </div>
               <div class="wrapper">
                <p>Apellido: </p>
                <p>@Model.LastName</p>
               </div>
                <div class="wrapper">
                <p>Carrera: </p>
                <p>@Model.Career</p>
                </div>
               <div class="wrapper">
                <p>Celular: </p>
                <p>@Model.Phone</p>
               </div>
                <div class="wrapper">
                <p>Numero de control: </p>
                <p>@Model.ControlNumber</p>
                </div>

           </section>
        </main>
    </body>
   
</html>
