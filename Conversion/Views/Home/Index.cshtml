@{
}

<html>
     <head>
        <link rel="stylesheet" href="~/index.css" />
     </head>
     <body>
        <h1>Conversión</h1>
          <form action="/Home">
                <label>Convertir a:</label>
                <input type="radio" name="moneda" value="USD" /> <label>USD</label>
                <input type="radio" name="moneda" value="MXN" /> <label>MXN</label>
                    
                <br/>
                <input type="number" name="valor" placeholder="100" />

			   <input type="submit" value="Convertir" />
               <br />
               <br />

               <label >Resultado: @Model.Resultado.ToString("$0.00") @if (Model.Moneda == "MXN") 
                {
				   <text>MXN</text>
			   }
			   else
			   {
				   <text>USD</text>
			   }
            </label>
			 
		  </form>
     </body>
</html>